<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/MainBackground"
    android:weightSum="15"
    tools:context="com.example.destan.kezintagame.MainActivity">

    <!--It contains the task bar layout-->
    <LinearLayout
        android:id="@+id/TaskBarLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">

        <!--Sun icon to change screen mode-->
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp">

        <com.github.zagum.switchicon.SwitchIconView
            android:id="@+id/switchIconView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:si_animation_duration="300"
            app:si_tint_color="@color/inputWordColor"
            app:srcCompat="@drawable/ic_sun2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">
        </LinearLayout>

        <!--Fading text shower to inform user-->
        <!--
        <com.tomer.fadingtextview.FadingTextView
            android:id="@+id/fadingTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:layout_weight="8"
            android:textSize="20sp"
            android:textColor="@color/inputWordColor"
            app:timeout="1000"
            app:texts="@array/txtStrings" />
        -->
        <!--It contain sound on/off icon-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp">

            <com.github.zagum.switchicon.SwitchIconView
                android:id="@+id/switchIconView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:si_animation_duration="300"
                app:si_tint_color="@color/inputWordColor"
                app:srcCompat="@drawable/ic_sound"
                />

        </LinearLayout>

    </LinearLayout>

    <!--It contains words which is entered by users-->
    <LinearLayout
        android:id="@+id/wordsLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="@color/black_overlay">

        <RelativeLayout
            android:id="@+id/gameActionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>



    </LinearLayout>

    <!--It contains input word which is entered by user-->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:background="@color/black_overlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/inputWordColor"
            android:layout_margin="3dp">

               <me.grantland.widget.AutofitTextView
                android:id="@+id/inputText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textIsSelectable="false"
                android:maxLines="1"
                android:textSize="50sp"
                autofit:minTextSize="16sp"
                android:textColor="@color/MainBackground"
                />

        </RelativeLayout>

    </LinearLayout>

    <!--It contains key buttons to enter any charachter-->
    <LinearLayout
        android:id="@+id/keyboardLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/q"
            android:src="@drawable/q"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/w"
            android:src="@drawable/w"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/e"
            android:src="@drawable/e"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/r"
            android:src="@drawable/r"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/t"
            android:src="@drawable/t"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/y"
            android:src="@drawable/y"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/u"
            android:src="@drawable/u"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ii"
            android:src="@drawable/ii"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/o"
            android:src="@drawable/o"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/p"
            android:src="@drawable/p"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/gi"
            android:src="@drawable/gi"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ui"
            android:src="@drawable/ui"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:weightSum="11"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/a"
            android:src="@drawable/a"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/s"
            android:src="@drawable/s"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/d"
            android:src="@drawable/d"
            android:layout_width="40dp"
